<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".RestaurantDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen10dp"
        android:layout_marginTop="@dimen/dimen10dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/backToMain"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen5dp"
            android:layout_marginLeft="@dimen/dimen5dp"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen20sp"
            android:textStyle="bold" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen10dp"
    android:layout_marginTop="@dimen/dimen10dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textColor="@color/black"
        android:textSize="@dimen/dimen20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/item_name"
        android:text="Name:"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/item_seller"
        android:text="Seller:"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen20sp"
        android:textStyle="bold" />
</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen10dp"
    android:layout_marginTop="@dimen/dimen10dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Location: "
        android:textColor="@color/black"
        android:textSize="@dimen/dimen20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/item_location"
        android:text="Location: "
        android:textColor="@color/black"
        android:textSize="@dimen/dimen20sp"
        android:textStyle="bold" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen10dp"
    android:layout_marginTop="@dimen/dimen10dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Display image: "
        android:textColor="@color/black"
        android:textSize="@dimen/dimen20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="@dimen/dimen200dp"
        android:layout_height="160dp"
        android:layout_marginLeft="@dimen/dimen10dp"
        android:id="@+id/item_image"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen10dp"
    android:layout_marginTop="@dimen/dimen10dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Price: "
        android:textColor="@color/black"
        android:textSize="@dimen/dimen20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/item_price"
        android:text="Price: "
        android:textColor="@color/black"
        android:textSize="@dimen/dimen20sp"
        android:textStyle="bold" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen10dp"
    android:layout_marginTop="@dimen/dimen10dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Rating: "
        android:textColor="@color/black"
        android:textSize="@dimen/dimen20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/item_rating"
        android:text="Rating: "
        android:textColor="@color/black"
        android:textSize="@dimen/dimen20sp"
        android:textStyle="bold" />

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen10dp"
    android:layout_marginTop="@dimen/dimen10dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Alias: "
        android:textColor="@color/black"
        android:textSize="@dimen/dimen20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/item_alias"
        android:text="Range: "
        android:textColor="@color/black"
        android:textSize="@dimen/dimen20sp"
        android:textStyle="bold" />
</LinearLayout>



</LinearLayout>